{
    "name": "pvm/mirror",
    "description": "PHP Version Manager Mirror Service - 独立的PHP版本管理镜像服务",
    "type": "application",
    "keywords": [
        "php",
        "mirror",
        "version-manager",
        "docker",
        "composer",
        "pecl",
        "extensions"
    ],
    "homepage": "https://github.com/pvm-project/php-version-manager-mirror",
    "license": "MIT",
    "authors": [
        {
            "name": "PVM Project",
            "email": "support@pvm-project.org"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0|^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Mirror\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mirror\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/pvm-mirror"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=5",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
