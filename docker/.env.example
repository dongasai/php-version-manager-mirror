# PVM Mirror 环境变量配置文件
# 复制此文件为 .env 并根据需要修改配置

# 基础配置
PVM_MIRROR_ENV=development
PVM_MIRROR_DEBUG=true

# 服务器配置
PVM_MIRROR_HOST=0.0.0.0
PVM_MIRROR_PORT=34403
PVM_MIRROR_PUBLIC_URL=http://localhost:34403
PVM_MIRROR_MAX_CONNECTIONS=100
PVM_MIRROR_TIMEOUT=30

# 目录配置
PVM_MIRROR_DATA_DIR=/app/data
PVM_MIRROR_LOG_DIR=/app/logs
PVM_MIRROR_CACHE_DIR=/app/cache

# 日志配置
PVM_MIRROR_LOG_LEVEL=info

# HTTPS配置
PVM_MIRROR_ENABLE_HTTPS=false
PVM_MIRROR_SSL_CERT_PATH=
PVM_MIRROR_SSL_KEY_PATH=

# 缓存配置
PVM_MIRROR_CACHE_SIZE=104857600  # 100MB
PVM_MIRROR_CACHE_TTL=3600        # 1小时

# 同步配置
PVM_MIRROR_SYNC_INTERVAL=24      # 24小时
PVM_MIRROR_MAX_RETRIES=3
PVM_MIRROR_RETRY_INTERVAL=300    # 5分钟

# 安全配置
PVM_MIRROR_ENABLE_ACCESS_LOG=true
PVM_MIRROR_ENABLE_RATE_LIMIT=true
PVM_MIRROR_RATE_LIMIT_REQUESTS=100
PVM_MIRROR_RATE_LIMIT_WINDOW=3600

# 监控配置
PVM_MIRROR_ENABLE_MONITORING=true
PVM_MIRROR_MONITORING_INTERVAL=60

# 数据库配置（如果需要）
# PVM_MIRROR_DB_HOST=localhost
# PVM_MIRROR_DB_PORT=3306
# PVM_MIRROR_DB_NAME=pvm_mirror
# PVM_MIRROR_DB_USER=pvm_mirror
# PVM_MIRROR_DB_PASS=password
